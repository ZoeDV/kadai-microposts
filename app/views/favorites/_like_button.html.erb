<% if current_user.liked?(micropost) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: {method: :delete, style: "display: inline"}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type: 'submit', class: 'btn btn-xs btn-submit') do %>Unlike <span class="glyphicon glyphicon-heart-empty"></span><% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build, html: {style: "display: inline"}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type: 'submit', class: 'btn btn-xs btn-submit') do %>Like <span class="glyphicon glyphicon-heart"></span><% end %>
  <% end %>
<% end %>
